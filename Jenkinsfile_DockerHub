pipeline {
    agent {
        label 'master'
    }
    environment {
        DOCKER_IMAGE = 'febryanmz/raja-ongkir:latest'
        SERVICE_NAME = 'test'
    }
    stages {
        stage('Pull Docker Image') {
            steps {
                script {
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    dockerImage.pull()

                    
                }
                // echo 'Try to pull images from Dockerhub'
                // sh 'docker pull ${DOCKER_IMAGE}'
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    def dockerContainer = dockerImage.run("-p 5000:8080")
                    
                    dockerContainer.waitForStatus('exited')
                    
                }
                // echo 'Try to run images from Docker'
                // sh 'docker run -p 5000:8080 ${SERVICE_NAME} ${DOCKER_IMAGE}'
            }
        }
    }
    // post {
    //     success {
    //         echo 'Docker container successfully executed!'
    //     }
    //     failure {
    //         error('Docker container execution failed!')
    //     }
    // }
}